<h1> Vacations <%=@user.name %> </h1>

<strong>Holydays days: </strong>  <%= @user.get_vacations_days.to_i %><br> <br>

<% @vacation.each do |vacation| %>
<p>
	<strong>Date start:</strong>
	<%= vacation.start_date.strftime("%m/%d/%Y") %>

	<strong>Date finish:</strong>
	<%= vacation.finish_date.strftime("%m/%d/%Y") %>

	<strong>Duration:</strong>
	<%= ((vacation.finish_date - vacation.start_date)/(3600*24)).to_i + 1 %>

	<strong>Discount:</strong>
	<%= vacation.discount_days.to_i %> days

	<%= link_to 'Delete' , user_vacation_path(@user , vacation) , method: :delete %>
	<%= link_to 'Update' , edit_user_vacation_path(@user , vacation)  %>
</p>

<% end %>

<%= link_to 'Assign vacations', new_user_vacation_path(@user) %>
